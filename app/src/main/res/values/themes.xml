<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFinancial" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyFinancial.NoActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    
    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/shape_rectangle_red</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@drawable/shape_rectangle_white_red</item>
        <item name="android:paddingStart">80dp</item>
        <item name="android:paddingEnd">80dp</item>
    </style>

    <style name="Button.Optional">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:background">@drawable/shape_rectangle_red_line</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">80dp</item>
        <item name="android:paddingEnd">80dp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    
    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    
    <style name="TextView.High">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.High.White">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_rectangle_red_line_radius5</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:padding">12dp</item>
    </style>


</resources>